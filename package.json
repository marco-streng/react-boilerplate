  "version": "0.0.1",
  "description": "React Boilerplate",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.prod.js",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "standard --verbose | snazzy",
    "lint:styles": "stylelint 'src/**/*.js'",
    "test": "cross-env jest --config config/jest/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-streng/react-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "webpack"
  ],
  "author": "Marco Streng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marco-streng/react-boilerplate/issues"
  },
  "homepage": "https://github.com/marco-streng/react-boilerplate#readme",
  "dependencies": {
    "polished": "^3.4.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "regenerator-runtime": "^0.13.2",
    "styled-components": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",

    "enzyme-to-json": "^3.3.5",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "react-hot-loader": "^4.12.7",
    "react-test-renderer": "^16.8.6",
    "snazzy": "^8.0.0",

    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.4",
    "npm-run-all": "^4.1.5",
    "react-hot-loader": "^4.13.0",
    "react-test-renderer": "^17.0.1",
    "snazzy": "^9.0.0",

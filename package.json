{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "description": "React Boilerplate",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config config/webpack/webpack.dev.js",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.prod.js",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "standard src --verbose | snazzy",
    "lint:styles": "stylelint 'src/**/*.js'",
    "test": "cross-env jest --config config/jest/jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-streng/react-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "react",
    "webpack"
  ],
  "author": "Marco Streng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marco-streng/react-boilerplate/issues"
  },
  "homepage": "https://github.com/marco-streng/react-boilerplate#readme",
  "dependencies": {
    "polished": "^4.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "regenerator-runtime": "^0.13.9",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@hot-loader/react-dom": "^17.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-styled-components": "^1.13.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "core-js": "^3.18.1",
    "cross-env": "^7.0.3",
